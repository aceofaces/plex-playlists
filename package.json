{
  "name": "plex-playlist-enhancer",
  "version": "0.2.0",
  "private": true,
  "description": "Daily Plex playlist generator with time-sliced history and sonic similarity",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "plex-playlists": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:docker": "./test-docker-quick.sh",
    "migrate": "tsx scripts/run-migrations.ts",
    "prepare": "husky || true"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ctrl/plex": "^3.10.0",
    "@kitajs/html": "^4.2.10",
    "better-sqlite3": "^11.8.1",
    "chart.js": "^4.5.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "ejs": "^3.1.10",
    "envalid": "^8.0.1",
    "express": "^5.1.0",
    "got": "^14.4.9",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.1.0",
    "node-cron": "^3.0.3",
    "p-limit": "^7.1.1",
    "p-queue": "^9.0.0",
    "pino": "^10.0.0",
    "pino-pretty": "^11.2.2",
    "postgres": "^3.4.7",
    "string-similarity-js": "^2.1.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.29.1",
    "ejs-lint": "^2.0.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "nock": "^14.0.10",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^2.1.5"
  }
}
